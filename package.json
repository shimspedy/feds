{
    "name": "netlify-express-app",
    "version": "1.0.0",
    "description": "A Netlify app using Express for server-side rendering",
    "main": "server/server.js",
    "scripts": {
      "build": "npm install && npm run build:client && npm run build:server",
      "build:client": "cp -R public/ dist/",
      "build:server": "babel server --out-dir dist/server",
      "start": "node dist/server/server.js"
    },
    "dependencies": {
      "express": "^4.17.1"
    },
    "devDependencies": {
      "@babel/cli": "^7.12.1",
      "@babel/core": "^7.12.3",
      "@babel/preset-env": "^7.12.1"
    },
    "babel": {
      "presets": ["@babel/preset-env"]
    }
  }
  